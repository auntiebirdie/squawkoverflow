<%- include('../header.ejs') %>

    <%- include('../partials/page-title.ejs', { title : bird.commonName, breadcrumb : "Birdypedia" }) %>

    <div class="row">
      <div class="col-md-8 pt-3">
        <div class="text-center">
          <img id="birdy" class="birdypet full <%= hatched.includes(birdypets[0].id) ? "hatched" : "unhatched" %>" src="<%= birdypets[0].image %>">
        </div>
      </div>
      <div class="col-md-4 pt-3 border-md-start text-center text-md-start">
        <h6>Scientific Name</h6>
        <p><%= bird.scientificName %></p>

        <h6>Family</h6>
        <p><a href="/birdypedia?family=<%= bird.family.toLowerCase() %>"><%= bird.family %></a></p>

        <h6>Order</h6>
        <p><%= bird.order %></p>

        <% if (birdypets.length > 1) { %>
        <h6>Variants</h6>
          <div id="birdDisplay">
          <% for (var birdypet of birdypets) { %>
            <p>
              <div class="birdypet mini <%= hatched.includes(birdypet.id) ? "hatched" : "unhatched" %>" data-src="<%= birdypet.image %>" style="background-image: url('<%= birdypet.image %>');"></div>
              <%= birdypet.version %> <%= birdypet.label %> <%= hatched.includes(birdypet.id) ? "✔️" : "" %>
            </p>
          <% } %>
          </div>
        <% } %>

        <h6>Hatches From</h6>
        <p>
        <% for (var adjective of bird.adjectives.sort()) { %>
            <%= adjective %> eggs<br>
        <% } %>
        </p>
      </div>
    </div>

  <%- include('../partials/spacer.ejs') %>

  <h4 class="mb-3">Who has one?</h4>

  <% if (members.length > 0) { %>
    <% for (var i = 0, len = members.length; i < len; i++) { %>
      <% if (i % 4 === 0) { %>
        <% if (i > 0) { %>
          </div>
        <% } %>
      <div class="row">
      <% } %>
        <div class="col-md-3 mb-3">
          <div class="row">
          <div class="col-3 text-center">
            <a href="/aviary/<%= members[i]._id %>?search=<%= bird.commonName %>">
              <img class="member-avatar" src="<%= members[i].avatar %>" data-id="<%= members[i]._id %>" onerror="missingMemberAvatar(this)">
            </a>
          </div>
          <div class="col-8 mb-3">
            <h5 class="pt-2">
              <a href="/aviary/<%= members[i]._id %>?search=<%= bird.commonName %>">
                <%= members[i].username %>
              </a>
            </h5>
          </div>
        </div>
      </div>
    <% }; %>
  <% } else { %>
    <p><em>This bird doesn't appear to be in anyone's aviaries... yet!</em></p>
  <% } %>

  <script type="text/javascript">
  $('#birdDisplay').on('click', '.birdypet.mini', function (event) {
    var variant = event.target;
    var full = document.getElementById('birdy');

    full.src = variant.getAttribute('data-src');

    if (variant.className.includes('unhatched')) {
      $(full).removeClass('hatched').addClass('unhatched');
    }
    else {
      $(full).removeClass('unhatched').addClass('hatched');
    }
  });
  </script>

<%- include('../footer.ejs') %>
