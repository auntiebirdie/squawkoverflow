<%- include('../header.ejs') %>

  <%- include('../partials/page-title.ejs', { title : birdypet.nickname ? birdypet.nickname : birdypet.bird.commonName }) %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-4 text-center">
        <img class="birdypet full" src="<%= birdypet.variant.image %>">
      </div>
    </div>
    <div class="col-md-6">
      <h4>Who is the lucky person to receive this bird?</h4>

      <div>
        <div id="memberSearch">
          <div class="row text-center">
            <div class="col-6 p-3">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="member-wants">
                <label class="form-check-label" for="member-wants">
                  ‚ù§Ô∏è Wants it
                </label>
              </div>
            </div>

            <div class="col-6 p-3">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="member-needs">
                <label class="form-check-label" for="member-needs">
                  üåü Needs it
                </label>
              </div>
            </div>
          </div>

          <input class="typeahead form-control" type="text">
        </div>

        <div id="memberDisplay" class="my-5">
        <% if (locals.selectedMember) { %>
          <h3><img src="<%= selectedMember.avatar %>" class="rounded-circle" width="75" data-id="<%= selectedMember.id %>" onerror="missingMemberAvatar(this)"> <%= selectedMember.username %></h3>
        <% } %>
        </div>

        <div class="text-center">
          <button id="actionButton" class="btn btn-secondary" type="button" <%= locals.selectedMember ? "" : "disabled" %>>Send Gift!</button>
        </div>
      </div>
    </div>
  </div>

  <%- include('../scripts/membersearch.ejs', { privacy: ['gifts'], include: ['birdData'], bird : birdypet.bird.code }) %>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#actionButton').on('click', function () {
        var button = this;

        if (!button.disabled) { 
          button.parentNode.parentNode.classList.add('loadingData'); 
          button.disabled = true;

          $.ajax({
            url: '/api/gift',
            data: JSON.stringify({
              member: $('img', '#memberDisplay').attr('data-id'),
              birdypet: '<%= birdypet.id %>'
            }),
            method: 'POST',
            dataType: "json",
            contentType: 'application/json',
            success: function() {
              window.location.replace('/birdypet/<%= birdypet.id %>');
            }
          });
        }
      });
    });
  </script>

<%- include('../footer.ejs') %>
