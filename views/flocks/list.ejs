<%- include('../header.ejs') %>

    <%- include('../partials/page-title.ejs', { title : "Groups" }) %>

    <% for (var i = 0, len = flocks.length; i < len; i++) { %>
      <% if (i % 2 === 0) { %>
        <% if (i > 0) { %>
          </div>
          <%- include('../partials/spacer.ejs') %>
        <% } %>
      <div class="row">
      <% } %>
        <div class="col-md-6">
          <div class="row">
          <div class="col-md-4 text-center">
            <a href="/groups/<%= flocks[i].name %>">
              <% if (flocks[i].image[0].image) { %>
                <%- include('../partials/photo', { photo : flocks[i].image[0], classes : "lazy img-thumbnail" }) %>
              <% } %>
            </a>
          </div>
          <div class="col-md-6">
            <h5 class="pt-2">
              <a href="/groups/<%= flocks[i].name %>">
                <%= flocks[i].name %>
              </a>
            </h5>
            <%= flocks[i].description %>
            <hr>
            <h6>Photos</h6>
            <p><%= flocks[i].photoCount %> </p>
          </div>
        </div>
      </div>
    <% }; %>
    </div>

<%- include('../footer.ejs') %>
