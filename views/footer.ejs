     <% if (locals.loggedInUser) { %>
      $('#main').on('click', 'button.wishlist-heart', function (event) {
        var button = event.target;

        if (!button.style.opacity) { 
          var action = button.getAttribute('data-action');
          button.style.opacity = .5;
          button.innerHTML = '‚è≥';
          $.ajax({
            url: '/api/wishlist',
            data: JSON.stringify({
              species: button.getAttribute('data-id')
            }),
            method: 'PUT',
            dataType: 'json',
            contentType: 'application/json',
            success: function(data) {
              button.style.opacity = null;
              button.innerHTML = data;
            }
          });
        }
      });

      $('#feedBug').on('click', function (event) {
        var button = this;

        if (!button.style.opacity) {
          button.style.opacity = .5;

          $.ajax({
            cache: false,
            url: `/api/nomnomnom`,
            method: 'POST',
            dataType: "json",
            contentType: 'application/json',
            data: JSON.stringify({
              birdypet: button.getAttribute('data-birdypet')
            }),
            success: function(data) {
              if (!data.error) {
                $('.birdymessage').text(data.response).show();
                $('.friendshipMeter').text(data.friendshipMeter);

                button.childNodes[1].innerText = data.bugs;

                if (data.bugs == 0) {
                  button.disabled = true;
                }
                else {
                  button.style.opacity = null;
                }
              }
              else {
                button.innerText = data.error;
                button.disabled = true;
              }
            }
          });
        }
      });
