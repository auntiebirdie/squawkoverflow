  <footer class="col-10 col-md-9 col-lg-10 offset-2 offset-md-3 offset-lg-2 pt-5 pb-3 bg-dark text-light">
    <div class="text-center">
      <p><small>All images &copy; their respective owners.  For takedown requests, <a href="mailto:seppukawaii+takedown@gmail.com" class="text-light"><u>email us</u></a> with the URL of the photo you would like removed.</small></p>
    </div>
  </footer>
  <% } %>

  <script type="text/javascript">
    $(document).ready( function () {
      var menu = document.getElementById('sidebarNav');

      lazyLoadInstance.update();

      $('#sidebarToggle').on('click', function () {
        var action = this.getAttribute('data-toggle');

        menu.classList.toggle('col-6');

        $('.nav-item .label', menu).toggleClass('d-none');

        if (action == "expand") {
          this.setAttribute('data-toggle', 'shrink');
          this.innerHTML = '&lsaquo;';
        }
        else {
          this.setAttribute('data-toggle', 'expand');
          this.innerHTML = '&rsaquo;';
        }
      });
    });
  </script>
