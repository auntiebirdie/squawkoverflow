<%- include('../header.ejs') %>

  <%- include('../partials/page-title.ejs', { title : "Hatch Eggs" }) %>

  <% if (timeUntil) { %>
  <div class="row text-center mt-5 mb-5">
    <h3><em>You can hatch another egg in <span id="countdown"><%= timeUntil %></span> minutes.</em></h3>
  </div>
  <% } else { %>
  <div class="row text-center mt-5 mb-5">
    <h3>These eggs are almost ready to hatch!  Which one will you pick?</h3>
  </div>

  <div class="row text-center mb-5">
    <% for (var egg of eggs) { %>
    <div class="col-6 col-md-4 col-lg-2">
        <a href="/hatched/<%= egg.name %>" class="btn btn-lg btn-outline-secondary p-3 mb-2">
          <h3>
            <img src="/img/eggs/<%= egg.icon ? egg.name : "default" %>.png">
          </h3>
          <h5><%= egg.name %></h5>
        </a>
    </div>
    <% } %>
  </div>

  <div class="row text-center mt-5">
    <div class="col">
      <p><small><em><a href="/faq#weird-eggs" target="_blank">What's with the weird eggs?</a></em></small></p>
    </div>
  </div>
  <% } %>

<%- include('../footer.ejs') %>
