  <div class="container">
    <div class="row">
      <%- include('../partials/page-title.ejs', { title : "Latest Photos" }) %>
    </div>
    <div id="recently-added" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
      <% for (var i = 0, len = recentlyAdded.length; i < len; i++) { %>
        <% if (i % 4 == 0) { %>
          <% if (i > 0) { %>
            </div>
          </div>
          <% } %>
          <div class="carousel-item<%= i == 0 ? " active" : "" %>">
            <div class="carousel-item-inner row">
        <% } %>
            <div class="carousel-photo col-6 col-md-3 text-center">
              <a href="/photos/<%= recentlyAdded[i].id  %>">
                <% if (recentlyAdded[i].image) { %>
                  <%- include('../partials/photo', { photo : recentlyAdded[i], classes : "w-100" }) %>
                <% } %>
              </a>
            </div>
      <% }; %>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#recently-added" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#recently-added" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

<script type="text/javascript" src="/js/full-background-image.js" image="banner"></script>
