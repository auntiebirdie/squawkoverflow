<%- include('../header.ejs') %>

  <%- include ('../partials/page-title.ejs', { title : member.username }) %>

  <div class="row">
    <div class="col-sm-6 col-md-3">
      <img class="member-avatar" src="<%= member.avatar %>" data-id="<%= member._id %>" onerror="missingMemberAvatar(this)">
    </div>
    <div class="col-sm-6 col-md-3">
      <br>
      <h5>Joined</h5>
      <p><%= new Date(member.joinedAt * 1).toLocaleString('en-US', { dateStyle: "long" }) %></p>

      <% if (aviary > 0) { %>
      <h5>Aviary</h5>
      <p><%= aviary %> BirdyPets</p>
      <% } %>
    </div>
    <div class="col-md-6 text-end">
        <p><a href="/aviary/<%= member._id %>" class="btn btn-primary">🐦 View Aviary</a></p>
      <% if (member.wishlist && !member.settings.privacy?.includes('wishlist')) { %>
        <p><a href="/wishlist/<%= member._id %>" class="btn btn-primary">❤️ View Wishlist</a></p>
      <% } %>
      <% if (locals.loggedInUser && loggedInUser.id != member._id && !member.settings.privacy?.includes('gifts')) { %>
        <p><a href="/members/<%= member._id %>/gift" class="btn btn-primary">🎁 Send Gift</a></p>
      <% } %>
    </div>
  </div>

  <% if (member.birdyBuddy) { %>
  <div class="row">

  </div>

  <%- include('../partials/spacer.ejs') %>

  <h3 class="mb-4">Birdy Buddy</h3>

  <div class="row">
    <div class="col-md-6 text-center">
      <div class="birdybuddy">
        <img src="<%= member.birdyBuddy.image %>">
        <span class="message" style="display: none;"></span>
      </div>
    </div>
    <div class="col-md-6">
      <h4><a href="/birdypet/<%= member.birdyBuddy._id %>"><%= member.birdyBuddy.nickname ? member.birdyBuddy.nickname : member.birdyBuddy.species.commonName %></a></h4>
      <div>
        <% if (member.birdyBuddy.description) { %>
        <div class="py-4 ps-4">
          <% for (var para of member.birdyBuddy.description.split("\r\n")) { %>
            <p><%= para %></p>
          <% } %>
        </div>
        <% } %>

        <%- include('../partials/friendshipMeter.ejs', { friendship : member.birdyBuddy.friendship }) %>

        <% if (locals.loggedInUser && bugs > 0) { %>
           <% if (member.birdyBuddy.friendship >= 100) { %>
             <p><em>You have <%= bugs %> bug<%= bugs != 1 ? "s" : "" %>, but <%= member.birdyBuddy.nickname ? member.birdyBuddy.nickname : member.birdyBuddy.species.commonName %> is full!</em></p>
           <% } else { %>
             <p><button id="feedBug" class="btn btn-primary" role="button" data-birdypet="<%= member.birdyBuddy._id %>">🐛 Feed a Bug (you have <span><%= bugs %></span>)</button></p>
           <% } %>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>

  <% if (member.flock) { %>
    <%- include('../partials/spacer.ejs'); %>

    <h4 class="mb-5"><%= member.flock.name %></h4>

    <div id="lazyLoader" class="row" data-endpoint="/api/flocks/<%= member.flock._id %>"></div>

    <%- include('../scripts/lazyloader.ejs') %>
  <% } %>

  <script type="text/javascript">
    var message = $('.birdybuddy .message');

    $('#feedBug').on('click', function (event) {
        var button = this;

        $.ajax({
          cache: false,
          url: `/api/birdypet/${this.getAttribute('data-birdypet')}/feedBug`,
          dataType: "json",
          success: function(data) {
            if (!data.error) {
              message.text(data.response).show();
              button.childNodes[1].innerText = data.bugs;

              if (data.bugs == 0) {
                button.disabled = true;
              }
            }
            else {
              button.innerText = data.error;
              button.disabled = true;
            }
          }
        });
    });
  </script>

<%- include('../footer.ejs') %>
