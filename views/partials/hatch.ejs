    <div class="row">
      <div class="col-md-6 text-center mb-3">
        <img id="birdy" class="lazy birdypet full">

        <div id="birdDisplay" class="p-1 mt-3 birdypets text-center"></div>
      </div>
      <div class="col-md-6 text-center text-md-start">
        <h3>
          <a href="" target="_blank"></a>
        </h3>
        <h5 class="mb-3"></h5>

        <div id="actions" class="mt-5 text-center">
          <a data-action="keep" class="btn btn-lg btn-light mb-3" role="button">❤️&nbsp;Keep</a>
          &nbsp;
          <a data-action="release" class="btn btn-lg btn-light mb-3" role="button">👋&nbsp;Release</a>

          <div id="memberSearch">
            <div class="row text-center mt-5">
              <div class="col-12">
                <h5>... or send as a gift to...</h5>
              </div>
            </div>

            <%- include('../partials/membersearch.ejs', { include: ['birdData'] }) %>

            <button id="memberButton" data-action="gift" class="mt-3 btn btn-lg btn-light" role="button" disabled>🎁&nbsp;Gift</button>
          </div>

         <% if (loggedInUser.supporter != 1) { %>
          <div class="mt-5">
            <p><em>Releasing and gifting birds does not trigger the 10-minute timer—only keeping!</em></p>
          </div>
         <% } %>
        </div>
      </div>
    </div>
