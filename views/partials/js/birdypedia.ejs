<div class="col-6 col-md-4 filter-item" data-category="${bird.species.family.toLowerCase()}">
  <div class="pb-4">
    <div class="card">
      <% if (locals.loggedInUser) { %>
        <button class="wishlist-heart btn btn-light btn-sm" data-id="${bird.species.speciesCode}" data-action="${wishlist.includes(bird.species.speciesCode) ? 'remove' : 'add'}" role="button">
          ${wishlist.includes(bird.species.speciesCode) ? '❤️' : '🤍'}
        </button>
      <% } %>
      <div class="lazy birdypet ${userpets.includes(bird.variants[0].id) ? "hatched" : "unhatched"}"
             data-bg="${ bird.variants[0].image}"
      ></div>
      <div class="card-body">
        <h6 class="text-center">
          ${bird.variants.length > 1 ? bird.variants.map(function (variant) { return '<div class="lazy birdypet mini ' + (userpets.includes(variant.id) ? "hatched" : "unhatched") + '" data-bg="' + variant.image + '"></div>'; }).join("") : ""}
        </h6>
        <hr>
        <h3 class="text-center"><a href="/birdypedia/bird/${bird.species.speciesCode}">${bird.species.commonName}</a></h3> 
      </div>
    </div>
  </div>
</div>
