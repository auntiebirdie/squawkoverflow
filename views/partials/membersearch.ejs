  <div id="memberSearch" data-bird="<%= locals.bird ? bird : "" %>">
   <% if (locals.include && include.includes('birdData')) { %>
    <div class="row text-center">
      <div class="col-6 p-3">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="member-wants">
          <label class="form-check-label" for="member-wants">
           ❤️ Wants it
          </label>
        </div>
      </div>

      <div class="col-6 p-3">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" id="member-needs">
          <label class="form-check-label" for="member-needs">
           🌟 Needs it
          </label>
        </div>
      </div>
    </div>
   <% } %>

    <div class="position-relative w-75 mx-auto">
      <input class="typeahead form-control" type="text" value="<%= locals.selectedMember ? selectedMember.username : "" %>">

      <div id="memberDisplay" class="position-absolute" style="left: -50px; top: -3px;">
       <% if (locals.selectedMember) { %>
         <img src="<%= selectedMember.avatar %>" class="rounded" width="45" data-id="<%= selectedMember.id %>" onerror="missingMemberAvatar(this)">
       <% } %>
      </div>
    </div>
  </div>
