<h5>First Letter</h5>
<div class="row mb-4">
  <input id="search" value="<%= selectedLetter %>" type="hidden">
<% for (let letter of 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'.split('')) { %>
  <div class="col-6 col-md-4 py-2 text-center">
    <a href="/birdypedia/eggs/<%= letter %>" class="btn btn-light"><%= letter %></a>
  </div>
<% } %>
</div>

<% if (locals.loggedInUser && locals.filters) { %>
<%
  var labels = {
    'incomplete': 'Incomplete',
    'completed': 'Completed'
  }
%>

<h5>Filters</h5>
  <div class="mb-4">
    <div id="filters">
     <% for (var filter of filters) { %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="filters-<%= filter %>" value="<%= filter %>" name="filters[]">
        <label class="form-check-label" for="filters-<%= filter %>">
          <%- labels[filter.split('-').shift()] %>
        </label>
      </div>
      <% } %>
    </div>
  </div>
<% } %>
