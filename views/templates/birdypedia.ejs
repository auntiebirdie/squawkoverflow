<div class="col-6 col-md-4 d-flex align-items-stretch">
  <div class="w-100 pb-3 px-2">
    <div class="h-100 card">
      <div class="birdypet-actions">
       <% if (locals.loggedInUser) { %>
        <button class="wishlist-heart btn btn-sm btn-dark" data-id="${model.id}" role="button">
          ${model.wishlisted ? (model.wishlisted == 2 ? '🌟' : '❤️') : '🤍'}
        </button>
        <% if (loggedInUser.happyBirdday && loggedInUser.birthdayPresentClaimed != 1) { %>
          <button class="birdday-present btn btn-sm btn-dark" data-id="${model.id}" role="button">
            🎉
          </button>
        <% } %>
       <% } %>
      </div>
      <div class="h100">
        <div class="bg-white lazy birdypet checkmark${model.owned >= 2 ? 2 : model.owned} ${model.discovered ? 'hatched' : 'unhatched'}"
               data-bg="${model.variants[0].image}"
        ></div>
        <h6 class="p-1 bg-white birdypets text-center">
          ${model.variants.length > 1 ? model.variants.filter((variant) => !variant.special).splice(0, 4).map((variant) => '<div class="lazy birdypet mini ' + (model.discovered ? "hatched" : "unhatched") + ' checkmark' + (variant.hatched >= 2 ? 2 : variant.hatched) + '" data-bg="' + variant.image + '"></div>').join("") : '<div class="birdypet mini disabled"></div>'}
          ${model.variants.length > 4 ? `<small class="text-dark">+${model.variants.length - 4} more</small>` : ''}
        </h6>
       </div>
       <div class="card-body">
        <h3 class="text-center"><a href="/birdypedia/bird/${model.id_slug}">${model.commonName}</a></h3>
        <h6 class="text-center"><em>${model.scientificName}</em></h6>
      </div>
    </div>
  </div>
</div>
