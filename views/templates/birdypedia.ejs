<div class="col-6 col-md-4 d-flex align-items-stretch">
  <div class="w-100 pb-4">
    <div class="h-100 card">
      <% if (locals.loggedInUser) { %>
        <button class="wishlist-heart btn btn-light btn-sm" data-id="${model.code}" data-action="${model.wishlisted ? 'remove' : 'add'}" role="button">
          ${model.wishlisted ? '‚ù§Ô∏è' : 'ü§ç'}
        </button>
      <% } %>
      <div class="h100">
        <div class="bg-white lazy birdypet ${model.variants[0].hatched ? "hatched" : "unhatched"}"
               data-bg="${model.variants[0].image}"
        ></div>
        <h6 class="p-1 bg-white birdypets text-center d-none d-sm-block">
          ${model.variants.length > 1 ? model.variants.map(function (variant) { return '<div class="lazy birdypet mini ' + (variant.hatched ? "hatched" : "unhatched") + '" data-bg="' + variant.image + '"></div>'; }).join("") : '<div class="birdypet mini disabled"></div>'}
        </h6>
       </div>
       <div class="card-body">
        <h3 class="text-center"><a href="/birdypedia/bird/${model.code}">${model.commonName}</a></h3>
        <h6 class="text-center"><em>${model.scientificName}</em></h6>
      </div>
    </div>
  </div>
</div>
