<div class="col-6 col-md-4 d-flex align-items-stretch">
  <div class="w-100 pb-3 px-2">
    <div class="h-100 card">
      <div class="birdypet-actions">
       <% if (locals.loggedInUser) { %>
        <button class="wishlist-heart btn btn-sm" data-id="${model.id}" role="button">
          ${model.wishlisted ? (model.wishlisted == 2 ? '🌟' : '❤️') : '🤍'}
        </button>
       <% } %>
      </div>
      <div class="h100">
        <div class="bg-white lazy birdypet ${model.variants.find((variant) => variant.hatched) ? "hatched" : "unhatched"} checkmark${model.owned >= 2 ? 2 : model.owned}"
               data-bg="${model.variants.find((variant) => variant.hatched)?.image || model.variants[0].image}"
        ></div>
        <h6 class="p-1 bg-white birdypets text-center">
          ${model.variants.length > 1 ? model.variants.map(function (variant) { return '<div class="lazy birdypet mini ' + (variant.hatched ? "hatched" : "unhatched") + ' checkmark' + (variant.hatched >= 2 ? 2 : variant.hatched) + '" data-bg="' + variant.image + '"></div>'; }).join("") : '<div class="birdypet mini disabled"></div>'}
        </h6>
       </div>
       <div class="card-body">
        <h3 class="text-center"><a href="/birdypedia/bird/${model.id_slug}">${model.commonName}</a></h3>
        <h6 class="text-center"><em>${model.scientificName}</em></h6>
      </div>
    </div>
  </div>
</div>
