<div class="col-6 col-md-4">
  <div class="pb-4">
    <div class="card">
      <% if (locals.loggedInUser) { %>
        <button class="wishlist-heart btn btn-light btn-sm" data-id="${bird.speciesCode}" data-action="${bird.wishlisted ? 'remove' : 'add'}" role="button">
          ${bird.wishlisted ? '❤️' : '🤍'}
        </button>
      <% } %>
      <div class="lazy birdypet ${bird.variants[0].hatched ? "hatched" : "unhatched"}"
             data-bg="${bird.variants[0].image}"
      ></div>
      <div class="card-body">
        <h6 class="text-center">
          ${bird.variants.length > 1 ? bird.variants.map(function (variant) { return '<div class="lazy birdypet mini ' + (variant.hatched ? "hatched" : "unhatched") + '" data-bg="' + variant.image + '"></div>'; }).join("") : ""}
        </h6>
        <hr>
        <h3 class="text-center"><a href="/birdypedia/bird/${bird.speciesCode}">${bird.commonName}</a></h3> 
      </div>
    </div>
  </div>
</div>
