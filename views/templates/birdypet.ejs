<div class="birdypet-container col-12 col-sm-6 col-md-4 d-flex align-items-stretch" data-id="${model.id}">
  <div class="w-100 pb-3 px-2">
    <div class="h-100 card">
      <div class="birdypet-actions">
       <% if (locals.loggedInUser) { %>
        <button class="wishlist-heart btn btn-sm btn-light" data-id="${model.bird.id}" role="button">
          ${model.bird.wishlisted ? (model.bird.wishlisted == 2 ? '🌟' : '❤️') : '🤍'}
        </button>
        <% if ((locals.page == 'aviary' && loggedInUser.id == member.id) || locals.page == 'gift') {%>
         <button class="birdypet-edit btn btn-sm btn-light"
             data-bs-toggle="modal"
             data-bs-target="#modal_editBirdyPet"
             data-id="${model.id}"
             role="button">
           ✏️
         </button>
         <button class="btn btn-sm btn-light"
             data-bs-toggle="modal"
             data-bs-target="#modal_giftBirdyPet"
             data-bird="${model.bird.id}"
             data-id="${model.id}"
             role="button">
            🎁
         </button>
        <% } %>
       <% } %>
      </div>
      <div>
        <a href="/birdypet/${model.id}">
          <div class="bg-white lazy birdypet <% if ((locals.page && page != 'aviary') || (locals.loggedInUser && loggedInUser.id != member.id)) { %>checkmark${model.bird.owned == 2 ? 2 : model.bird.owned}<% } %>"
               data-bg="${model.variant.image}"
               data-id="${model.id}"
          >
          </div>
        </a>
        <h6 class="p-1 bg-white birdypets text-center">
          ${model.friendship > 0 ? model.friendshipMeter : '&nbsp;'}
        </h6>
      </div>
      <div class="card-body">
        <h3 class="text-center"><a href="/birdypet/${model.id}">${model.nickname ? model.nickname : model.bird.commonName}</a></h3>
        <h6 class="text-center">${model.nickname ? model.bird.commonName : (model.variant.label ? model.variant.label : '&nbsp;')}</h6>
      </div>
    </div>
  </div>
</div>
