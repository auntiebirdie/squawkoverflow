<div class="card bg-light border-dark py-2 px-4 mb-4">
  <div class="row">
    <div class="col-12">
      <h3>
        <img class="rounded-circle me-2" src="${model.member.avatar}" data-id="${model.memberB.id}" onerror="missingMemberAvatar(this)" width="42">

        Offer ${model.memberA == '<%= loggedInUser.id %>' ? "to" : "from"} ${model.member.username}
      </h3>
    </div>
    <div class="col-6">
      <p>
        <em>
          Status: ${model.state}
        </em>
      </p>
      <p>
        <em>
          Last Update:
          ${new Date(model.updatedAt).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
              timeZoneName: 'short',
              hour12: false
          })}
        </em>
      </p>
    </div>
    <div class="col-6 text-end">
      <p>
        <a href="/exchange/${model.id}" class="btn btn-dark">View</a> &nbsp;
        <button class="btn btn-danger" data-id="${model.id}">Delete</button>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
    </div>
  </div>
</div>
