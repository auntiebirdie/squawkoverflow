<div class="card py-2 px-4 mb-4">
  <div class="row">
    <div class="col-12">
      <h3>
       ${model.statusA + model.statusB < 4 ? `<a href="/exchange/${model.id}">` : ''}
        <img class="rounded-circle me-2" src="${model.member.avatar}" data-id="${model.memberB.id}" onerror="missingMemberAvatar(this)" width="42">

        Offer ${model.memberA == '<%= loggedInUser.id %>' ? "to" : "from"} ${model.member.username}
       ${model.statusA + model.statusB < 4 ? '</a>' : ''}
      </h3>
    </div>
    <div class="col-6">
      <p>
        <em>
          Status: ${model.state}
        </em>
      </p>
      <p>
        <em>
          Last Update:
          ${new Date(model.updatedAt).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
              timeZoneName: 'short',
              hour12: false
          })}
        </em>
      </p>
    </div>
    <div class="col-6 text-end">
      <p>
        <a data-id="${model.id}" class="btn btn-danger">Delete</a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
    </div>
  </div>
</div>
